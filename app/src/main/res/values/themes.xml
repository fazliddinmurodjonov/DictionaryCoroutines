<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DictionaryWithCoroutines" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorSecondary">@color/red_one</item>
        <item name="colorSecondaryVariant">@color/red_one</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:icon">@color/black</item>
        <item name="colorAccent">@color/ripple_color</item>
        <item name="android:textColorHighlight">@color/ripple_color</item>
        <item name="android:colorControlActivated">@color/red_four</item>
        <item name="android:statusBarColor">@color/red_four</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/bg_card</item>
        <item name="android:windowBackground">@drawable/bg_splash_day</item>
        <item name="navigationViewStyle">@style/CustomNavigationView</item>
    </style>

    <style name="CustomNavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">@style/NavigationTextStyle</item>
    </style>

    <style name="Theme.DictionaryWithCoroutines.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DictionaryWithCoroutines.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.AppCompat.Widget.ActionBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/red_four</item>
    </style>

    <style name="NavigationTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppNavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/bg_card</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.DictionaryWithCoroutines" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


</resources>
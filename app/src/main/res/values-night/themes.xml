<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DictionaryWithCoroutines" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorSecondary">@color/red_one</item>
        <item name="colorSecondaryVariant">@color/red_one</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:icon">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@drawable/bg_splash_night</item>
        <item name="navigationViewStyle">@style/CustomNavigationView</item>
    </style>
    <style name="CustomNavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">@style/NavigationTextStyle</item>
    </style>
    <style name="NavigationTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppNavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/bg_card</item>
    </style>
</resources>